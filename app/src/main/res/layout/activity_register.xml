<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinator_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.rujul.breakster.RegisterActivity">

        <EditText
            android:id="@+id/edtname"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtmob"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="22dp"
            android:ems="10"
            android:hint="Enter Name"
            android:inputType="text" />


        <EditText
            android:id="@+id/edtpass"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/edtemail"
            android:layout_alignStart="@+id/edtemail"
            android:layout_below="@+id/edtemail"
            android:layout_marginTop="21dp"
            android:ems="10"
            android:hint="Enter Password"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/submit"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtpass"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="38dp"
            android:backgroundTint="@color/colorPrimaryDark"
            android:text="Sign Me Up!"
            android:textColor="@android:color/background_light" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView9"
            android:layout_alignBottom="@+id/textView9"
            android:layout_centerHorizontal="true"
            android:text="OR"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/submit"
            android:layout_marginTop="44dp"
            android:layout_toLeftOf="@+id/textView2"
            android:layout_toStartOf="@+id/textView2"
            android:text="_____________________"
            android:textColor="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView2"
            android:layout_alignBottom="@+id/textView2"
            android:layout_toEndOf="@+id/textView2"
            android:layout_toRightOf="@+id/textView2"
            android:text="_____________________"
            android:textColor="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="42dp"
            android:text="Already Have An Account? Login!"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"
            android:layout_below="@+id/textView2"
            android:layout_centerHorizontal="true" />

        <EditText
            android:id="@+id/edtemail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/edtname"
            android:layout_alignLeft="@+id/edtname"
            android:layout_alignRight="@+id/edtname"
            android:layout_alignStart="@+id/edtname"
            android:layout_below="@+id/edtname"
            android:layout_marginTop="27dp"
            android:ems="10"
            android:hint="Enter Email"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/edtmob"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Phone Number"
            android:inputType="number"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/edtname"
            android:layout_alignStart="@+id/edtname"
            android:layout_marginTop="14dp"
            android:layout_alignRight="@+id/edtname"
            android:layout_alignEnd="@+id/edtname" />

    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>